<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE7E1"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/row2"/>

        <EditText
            android:id="@+id/edit_re_username"
            android:layout_width="186dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:hint="请输入用户名" />

        <EditText
            android:id="@+id/edit_re_password"
            android:layout_width="186dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="请输入密码"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/edit_re_password2"
            android:layout_width="186dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="请再次输入密码"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/edit_re_email"
            android:layout_width="186dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="邮箱" />

        <Button
            android:id="@+id/bt_re"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册" />

        <TextView
            android:id="@+id/tv_bank_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="已有帐号？ 点此登录" />

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>